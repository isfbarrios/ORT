@using Dominio
@model Partido

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-10">
            <h1>@Model.TituloToString()</h1>
        </div>
    </div>
    <div class="row">
        @if (!Model.Finalizado)
        {
            <div class="col-12 col-sm-10">
                <div class="form-content">
                    <form class="form-inline" method="post" action="~/Partido/Finalizar/">
                        <input class="form-group" type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-link p-1" type="submit">Finalizar</button>
                    </form>
                </div>
            </div>
        }
        <div class="col-12 col-sm-10">
            <a class="btn btn-link p-1" href="~/Incidente/CrearIncidente/@Model.Id">
                <span class="text">Crear Incidente</span>
            </a>
        </div>
        <div class="col-12 col-sm-10">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Local</th>
                        <th>Visitante</th>
                        <th>Fecha</th>
                        <th>Resultado</th>
                        <th>Incidentes</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Local</td>
                        <td>@Model.Visitante</td>
                        <td>@Model.Fecha.ToShortDateString()</td>
                        <td>@Model.Resultado</td>
                        <td>
                            <a class="btn btn-link p-1" href="~/Incidente/IncidentePartido/@Model.Id">
                                <span class="text">Ver</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


