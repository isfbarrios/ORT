@using Dominio
@model List<Partido>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-10">
            <h1>Index</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-10">
            <table class="table table-responsive table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Local</th>
                        <th>Visitante</th>
                        <th>Fecha</th>
                        <th>Resultado</th>
                        <th>Incidentes</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <!--            this.local = local;
    this.visitante = visitante;
    this.fecha = fecha;
    this.finalizado = false; //Por defecto, no finalizado
    this.resultado = Resultado.PENDIENTE;
    this.incidentes = new List<Incidente>();-->
                    @foreach (Partido p in Model)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Local</td>
                            <td>@p.Visitante</td>
                            <td>@p.Fecha.ToShortDateString()</td>
                            <td>@p.Resultado</td>
                            <td>
                                <a class="btn btn-success p-1" href="~/Incidentes/Index/@p.Id" style="width:34px;height:34px;">
                                    <span class="text">Ver incidentes </span>
                                    <i class="fas fa-plus-circle"></i>
                                </a>
                            </td>
                            <td style="display: grid;grid-template: 1fr / 1fr 1fr;grid-gap: 5px;">
                                <a class="btn btn-warning p-1" href="~/Partido/EditarPartido/@p.Id" style="width:34px;height:34px;">
                                    <i class="fas fa-edit" style="font-size:15px;"></i>
                                </a>
                                <a class="btn btn-danger p-1" href="~/Partido/EliminarPartido/@p.Id" style="width:34px;height:34px;">
                                    <i class="fas fa-trash" style="font-size:15px;"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


