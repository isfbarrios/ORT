@using Dominio
@model List<Partido>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-10">
            <h1>Partidos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-10">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Local</th>
                        <th>Visitante</th>
                        <th>Fecha</th>
                        <th>Resultado</th>
                        <th>Incidentes</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Partido p in Model)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Local</td>
                            <td>@p.Visitante</td>
                            <td>@p.Fecha.ToShortDateString()</td>
                            <td>@p.Resultado</td>
                            <td>
                                <a class="btn btn-link p-1" href="~/Incidente/IncidentePartido/@p.Id">
                                    <span class="text">Ver incidentes</span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


