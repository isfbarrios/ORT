@using Dominio
@model List<Seleccion>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-10">
            <h1>Selecciones</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-sm-10">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Plantel</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Seleccion s in Model)
                    {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Pais.Nombre</td>
                        <td>
                            <select class="form-control">
                                <option value="-1"></option>
                                @foreach (Jugador j in s.Jugadores)
                                {
                                    <option value="@j.Id">@j.Nombre</option>
                                }
                            </select>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


