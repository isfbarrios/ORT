@using Dominio
@model List<Incidente>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Index</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Partido</th>
                        <th>Jugador</th>
                        <th>Incidente</th>
                        <th>Minuto</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Incidente i in Model)
                    {
                        <tr>
                            <td>@i.Id</td>
                            <td>@i.Partido.ToString()</td>
                            <td>@i.Jugador.ToString()</td>
                            <td>@i.TipoIncidente.ToString()</td>
                            <td>@i.Minuto</td>
                            <td>
                                <a class="btn btn-link p-1" href="~/Partido/Index/@i.Partido.Id">
                                    <span class="text">Ver Partido </span>
                                    <i class="fas fa-plus-circle"></i>
                                </a>
                            </td>
                            <td style="display: grid;grid-template: 1fr / 1fr 1fr;grid-gap: 5px;">
                                <a class="btn btn-warning p-1" href="~/Incidentes/EditarIncidentes/@i.Id" style="width:34px;height:34px;">
                                    <i class="fas fa-edit" style="font-size:15px;"></i>
                                </a>
                                <a class="btn btn-danger p-1" href="~/Incidentes/EliminarIncidente/@i.Id" style="width:34px;height:34px;">
                                    <i class="fas fa-trash" style="font-size:15px;"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


