@using Dominio

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Registrarse</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (ViewBag.mensaje != null)
            {
                <div class="alert alert-warning">
                    <div>
                        @ViewBag.Mensaje
                    </div>
                </div>
            }
            <form class="form" method="post">
                <div class="form-group">
                    <label for="txtNombre">Nombre</label>
                    <input id="txtNombre" class="form-control" name="nombre" type="text" placeholder="John" />
                </div>
                <div class="form-group">
                    <label for="txtApellido">Apellido</label>
                    <input id="txtApellido" class="form-control" name="apellido" type="text" placeholder="Doe" />
                </div>
                <div class="form-group">
                    <label for="txtMail">Mail</label>
                    <input id="txtMail" class="form-control" name="mail" type="email" placeholder="johndoe@hotmail.com" />
                </div>
                <div class="form-group">
                    <label for="txtUser">Usuario</label>
                    <input id="txtPass" class="form-control" name="pass" type="password" placeholder="Contraseña" />
                </div>
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>
        </div>
    </div>
</div>